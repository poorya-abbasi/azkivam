{
  "name": "azkivam",
  "version": "1.0.1",
  "description": "A helper library to implement AzkiVam finance payments fluidly",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --ext .js,.ts ./src",
    "lint:fix": "eslint --fix --ext .js,.ts ./src",
